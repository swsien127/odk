        <li><a data-rel="popup"
            class="languageMenu
            {{#unless hasTranslations}}ui-disabled{{/unless}}">
            Language
            </a>
        </li>
        <li><a data-rel="popup" 
            class="show-contents
            {{#unless showContents}}ui-disabled{{/unless}}">
            Contents
            </a>
